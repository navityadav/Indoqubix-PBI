@model SomatusAnalytics.Models.ResetPassword
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="col-xl-12 p-0">
    <div class="auth-form content" data-ref="init_change_password">
        <div class="text-center mb-3">
            <div class="auth-form-logo">
                <img src="~/theme/light/images/indoqubix-logo.png" alt="Renaliq Insight" class="img-fluid" />
            </div>
        </div>
        <h5 class="text-center mb-5">Set new password for <b>@Model.email</b></h5>

        <div class="alert alert-light" role="alert" id="msg-invalid">
            <p>In order to protect your account, make sure your password is :</p>
            <ul class="pl-3">
                <li class="list-style-circle">
                    Longer than 8 characters
                </li>
                <li class="list-style-circle">Doesn’t contain or significantly match with your username </li>
                <li class="list-style-circle">Must contain at least one special character, upper case letter and a number</li>
            </ul>
        </div>

        <form name="reset-password-form" class="form-valide" action="~/useraccess/updatepassword" method="POST" id="reset-password-form">
            <label><strong>Current Password</strong></label>
            <span class="text-danger">*</span>
            <div class="form-group ">
                <input type="password" value="" class="form-control" placeholder="Current Password" name="password" id="password" required="required">
            </div>

            <div class="form-group">
                <label for="val-password">
                    <label><strong>New Password</strong></label>
                    <span class="text-danger">*</span>
                </label>
                <input type="password" class="form-control val-password" placeholder="New Password" name="newpassword" id="newpassword" required="required">
            </div>
            <div class="form-group">
                <label><strong>Confirm Password</strong></label>
                <span class="text-danger">*</span>
                <input type="password" class="form-control val-confirm-password" placeholder="Confirm Password" name="confirmpassword" id="confirmpassword" required="required">

            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block" id='btn-reset-password'>UPDATE</button>
            </div>
        </form>
        <div class="new-account mt-3">
            <p>Back to Login Page? <a class="text-primary" href="/">Click Here</a></p>
            @if (@Model.error != null)
            {
                if (@Model.error.Equals("INVALID_USER"))
                {
                    <div class="alert alert-danger alert-dismissible fade show " role="alert" id="msg-invalid">
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>

                        <strong>Error!</strong> Current password is wrong.
                        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                            <span><i class="mdi mdi-close"></i></span>
                        </button>
                    </div>

                }
                else if (@Model.error.Equals("ERROR_PASSWORD_HAS_USER"))
                {
                    <div class="alert alert-danger alert-dismissible fade show " role="alert" id="msg-invalid">
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>

                        <strong>Error!</strong> Password significantly matches with your username.
                        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                            <span><i class="mdi mdi-close"></i></span>
                        </button>
                    </div>

                }


                else if (@Model.error.Equals("ERROR_IN_SAVING"))
                {
                    <div class="alert alert-danger alert-dismissible fade show " role="alert" id="msg-invalid">
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>

                        <strong>Error!</strong> in resetting Password, please try again.
                        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                            <span><i class="mdi mdi-close"></i></span>
                        </button>
                    </div>

                }

                else if (@Model.error.Equals("INVALID_NEW_PASSWORD"))
                {
                    <div class="alert alert-danger alert-dismissible fade show " role="alert" id="msg-invalid">
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>

                        <strong>Error!</strong> New Password and confirm password must be same.
                        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                            <span><i class="mdi mdi-close"></i></span>
                        </button>
                    </div>

                }

            }
        </div>
    </div>

</div>

