@model SomatusAnalytics.Models.ReportBuilderTableModel

@{

    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@if (Model.error != null)
{
    <div class="row  card-body">
        <div class="card-header">
           

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row message">
                    <!-- ERROR BLOCK-->

                    <div class="row-fluid">
                        <div class="container-pad text-danger">

                            <div class="span12">

                                <div class="hero-unit">

                                    <p class='title'> Error</p><hr/>
                                    <div class="block p-b-20">@Model.error </div>
                                    <div class="block p-b-20">@Model.query </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <!-- END OF ERROR BLOCK-->
                </div>
            </div>
        </div>
    </div>


}
else
{
     <div class="row ">
                <form id="configure-table-form">

                    <div class="col-lg-12 col-md-12 col-sm-12 p-10">
                        <input type="hidden" id="value-list-col" name="value-list-col" value="@Model.listColumn"/>
                        <table id="data-table" class="display table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th scope="col" width="10"></th>
                                    <th scope="col">@Model.listColumn</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow row in Model.data.Rows)
                                {
                                <tr>

                                    @foreach (System.Data.DataColumn col in Model.data.Columns)
                                    {
                                        if (@row[@col] != null && !@row[@col].Equals(""))
                                        {
                                            if (!(@row[@col] == null || @row[col].ToString().Equals("")))
                                            { 
                                                <th scope="row"><input type="checkbox" value="@row[@col]" name='@row[@col]' class='select-column-value' /></th>
                                                <td>@row[@col]</td>
                                            }

                                        }
                                    }
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
}


